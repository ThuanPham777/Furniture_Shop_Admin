<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <!-- Ant Design CSS -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/antd/4.24.8/antd.min.css"
    />
    <!-- Custom CSS -->
    <style>
      body {
        background-color: #f5f5f5;
      }
      .header-btn {
        background-color: red;
        color: white;
        border: none;
      }
      .ant-btn-danger {
        background-color: red;
        color: white;
      }
      .view-all {
        background-color: red;
        color: white;
        border-radius: 5px;
        padding: 4px 12px;
      }
    </style>
  </head>
  <body>
    <div class="container mx-auto p-4">
      <!-- Header -->
      <div class="flex justify-between items-center bg-white p-4 shadow-md">
        <input type="text" placeholder="Search..." class="ant-input w-1/3" />
        <button class="ant-btn header-btn">Add New</button>
      </div>

      <!-- Statistic Cards -->
      <div class="grid grid-cols-4 gap-4 mt-6">
        <div class="ant-card p-4 text-center">
          <h2 class="text-2xl font-bold">2194</h2>
          <p>Students</p>
        </div>
        <div class="ant-card p-4 text-center">
          <h2 class="text-2xl font-bold">53</h2>
          <p>Teachers</p>
        </div>
        <div class="ant-card p-4 text-center">
          <h2 class="text-2xl font-bold">5</h2>
          <p>Schools</p>
        </div>
        <div class="ant-card p-4 text-center">
          <h2 class="text-2xl font-bold">350000</h2>
          <p>Income</p>
        </div>
      </div>

      <!-- Recent Payments -->
      <div class="ant-card mt-6 p-4">
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-lg font-bold">Recent Payments</h3>
          <button class="view-all">View All</button>
        </div>
        <table class="ant-table w-full">
          <thead>
            <tr>
              <th>Name</th>
              <th>School</th>
              <th>Amount</th>
              <th>Option</th>
            </tr>
          </thead>
          <tbody>
            <% for (let i = 0; i < 5; i++) { %>
            <tr>
              <td>John Doe</td>
              <td>St. James College</td>
              <td>$120</td>
              <td>
                <button class="ant-btn ant-btn-danger">View</button>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <!-- New Students -->
      <div class="ant-card mt-6 p-4">
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-lg font-bold">New Students</h3>
          <button class="view-all">View All</button>
        </div>
        <table class="ant-table w-full">
          <thead>
            <tr>
              <th>Profile</th>
              <th>Name</th>
              <th>Option</th>
            </tr>
          </thead>
          <tbody>
            <% for (let i = 0; i < 3; i++) { %>
            <tr>
              <td>
                <span
                  class="ant-avatar ant-avatar-circle bg-blue-500 text-white"
                  >JS</span
                >
              </td>
              <td>John Steve Doe</td>
              <td>
                <button class="ant-btn ant-btn-link text-red-500">View</button>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
