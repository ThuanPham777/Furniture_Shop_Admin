<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin - Furniture Shop</title>

    <!-- Link TailwindCSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Ant Design CSS CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/antd/4.24.8/antd.min.css"
      integrity="sha512-zWswk...hash..." crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Link Font Awesome (Icons) -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.0/css/all.min.css"
      integrity="sha512-9xKTRVabjVeZmc+GUW8GgSmcREDunMM+Dt/GrzchfN8tkwHizc5RP4Ok/MXFFy5rIjJjzhndFScTceq5e6GvVQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <style>
      #main-content {
        width: calc(100% - 20%);
        /* Adjust based on the sidebar width */
        transition: width 0.3s ease;
        /* Smooth transition */
      }

      body.hidden-sidebar #main-content {
        width: 100%;
        transition: width 0.3s ease;
        /* Smooth transition */
      }

      body.hidden-sidebar #sidebar {
        transform: translateX(-100%);
        display: none;
      }
    </style>
  </head>

  <body class="bg-gray-100 flex flex-col min-h-screen">
    <!-- Navbar -->
    <header
      class="bg-gray-800 shadow-md w-full px-4 py-3 flex justify-between items-center relative"
    >
      <div class="flex items-center">
        <button id="menu-btn" class="text-gray-700 mr-4">
          <i class="fa-solid fa-bars"></i>
        </button>
        <h1 class="text-2xl font-bold text-white">Furniture Shop Admin</h1>
      </div>
      <div>
        <button
          class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded"
        >
          Đăng nhập
        </button>
      </div>
    </header>

    <div class="flex flex-1 w-full">
      <!-- Add pt-16 to create space for the fixed header -->
      <!-- Sidebar -->
      <aside
        id="sidebar"
        class="bg-gray-800 text-white w-1/8 min-h-screen space-y-6 py-7 px-2 transition-transform transform translate-x-0"
      >
        <nav>
          <a
            href="/"
            class="block py-2.5 px-4 rounded transition duration-200 hover:bg-gray-700"
          >
            <i class="fas fa-tachometer-alt mr-2"></i> Dashboard
          </a>
          <a
            href="/accounts"
            class="block py-2.5 px-4 rounded transition duration-200 hover:bg-gray-700"
          >
            <i class="fas fa-users mr-2"></i> Accounts
          </a>
          <a
            href="/products"
            class="block py-2.5 px-4 rounded transition duration-200 hover:bg-gray-700"
          >
            <i class="fas fa-boxes mr-2"></i> Products
          </a>
          <a
            href="/orders"
            class="block py-2.5 px-4 rounded transition duration-200 hover:bg-gray-700"
          >
            <i class="fas fa-shopping-cart mr-2"></i> Orders
          </a>
          <a
            href="/reportsRevenue"
            class="block py-2.5 px-4 rounded transition duration-200 hover:bg-gray-700"
          >
            <i class="fas fa-tachometer-alt mr-2"></i> Report Revenue
          </a>
          <a
            href="/reportsProduct"
            class="block py-2.5 px-4 rounded transition duration-200 hover:bg-gray-700"
          >
            <i class="fas fa-tachometer-alt mr-2"></i> Report Product
          </a>
        </nav>
      </aside>

      <!-- Main Content -->
      <div
        id="main-content"
        class="flex-1 flex flex-col transition-all duration-300"
      >
        <main class="flex-1">
          <%- body %>
          <!-- Placeholder for dynamic content -->
        </main>
      </div>
    </div>

    <script>
      const menuBtn = document.getElementById("menu-btn");
      const body = document.body;

      // Toggle sidebar visibility
      menuBtn.addEventListener("click", () => {
        body.classList.toggle("hidden-sidebar");
      });
    </script>
  </body>
</html>
