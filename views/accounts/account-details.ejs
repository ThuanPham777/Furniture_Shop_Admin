<div class="container mx-auto my-10 p-8 bg-white rounded-lg shadow-md">
  <!-- Title -->
  <h1 class="text-3xl font-bold text-blue-600 mb-6">Account Details</h1>

  <!-- User Avatar -->
  <div class="flex items-center space-x-6 mb-8">
    <img src="<%= user.avatarUrl || 'https://via.placeholder.com/150' %>" alt="Avatar"
      class="w-24 h-24 rounded-full shadow-md border" />
    <div>
      <h2 class="text-xl font-semibold text-gray-800">
        <%= user.firstName %>
          <%= user.lastName %>
      </h2>
    </div>
  </div>

  <!-- User Information -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="bg-gray-50 p-6 rounded-lg shadow-sm">
      <h3 class="text-lg font-medium text-gray-800 mb-4">Basic Information</h3>
      <p><span class="font-semibold text-gray-600">Username:</span>
        <%= user.username %>
      </p>
      <p><span class="font-semibold text-gray-600">Email:</span>
        <%= user.email %>
      </p>
      <p><span class="font-semibold text-gray-600">Phone Number:</span>
        <%= user.phoneNumber || 'N/A' %>
      </p>
    </div>
    <div class="bg-gray-50 p-6 rounded-lg shadow-sm">
      <h3 class="text-lg font-medium text-gray-800 mb-4">Address</h3>
      <p><span class="font-semibold text-gray-600">Address:</span>
        <%= user.address || 'N/A' %>
      </p>
      <p><span class="font-semibold text-gray-600">City:</span>
        <%= user.city || 'N/A' %>
      </p>
      <p><span class="font-semibold text-gray-600">Province:</span>
        <%= user.province || 'N/A' %>
      </p>
      <p><span class="font-semibold text-gray-600">Country:</span>
        <%= user.country %>
      </p>
    </div>
  </div>
</div>